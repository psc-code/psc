#! /bin/sh

set -e

@MPIRUN@ -n 1 ./test_mrc_f3 --mrc_io_type xdmf_collective \
    --mrc_crds_type rectilinear

TEST=f3_1
for a in reference_results/$TEST/*.xdmf; do 
    b=`basename $a`
    sed 's/uid-0x[0-9a-f]*/uid/g' $b | diff -u $a -
done

for a in reference_results/$TEST/*.h5.dump; do 
    b=`basename $a .dump`
    h5dump $b > $b.dump
    sed 's/uid-0x[0-9a-f]*/uid/g' $b.dump | diff -I 'STRSIZE [1-9][0-9]' -u $a -
    rm $b.dump
done

