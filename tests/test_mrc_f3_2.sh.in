#! /bin/bash

set -e

@MPIRUN@ -n 1 ./test_mrc_f3 --mrc_io_type xdmf_collective \
    --mrc_crds_type rectilinear --case 2

TEST=f3_1
while getopts ":u:" Option
do
    echo "Updating Reference Results"
    for a in reference_results/$TEST/*.xdmf; do 
	b=`basename $a`
	if sed 's/uid-0x[0-9a-f]*/uid/g' $b | diff -b -u $a -
	then
	    echo "${b} matches, not updataing"
	else
	    echo "${b} doesn't match. Update?"
	    select yn in "Yes" "No"; do
		case $yn in
		    Yes ) sed 's/uid-0x[0-9a-f]*/uid/g' $b > $a; break;;
		    No ) break;;
		esac
	    done
	fi
    done
    for a in reference_results/$TEST/*.h5.dump; do 
	b=`basename $a .dump`
	h5dump $b > $b.dump
	if   sed 's/uid-0x[0-9a-f]*/uid/g' $b.dump | diff -b -I 'STRSIZE [1-9][0-9]' -u $a -
	then
	    echo "${b} matches, not updataing"
	else
	    echo "${b} doesn't match. Update?"
	    select yn in "Yes" "No"; do
		case $yn in
		    Yes ) sed 's/uid-0x[0-9a-f]*/uid/g' $b.dump > $a; break;;
		    No ) break;;
		esac
	    done
	fi
    done
done

for a in reference_results/$TEST/*.xdmf; do 
    b=`basename $a`
    sed -i '' 's/uid-0x[0-9a-f]*/uid/g' $b
    diff -b -u $a $b
done

for a in reference_results/$TEST/*.h5.dump; do 
    b=`basename $a .dump`
    h5dump $b > $b.dump
    sed -i '' 's/uid-0x[0-9a-f]*/uid/g' $b.dump
    diff -b -u $a $b.dump
    rm $b.dump
done

